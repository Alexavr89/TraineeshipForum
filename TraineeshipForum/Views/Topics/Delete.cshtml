@model TraineeshipForum.Models.Actions.WithTopics.DeleteTopic

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<p class="error">@ViewBag.ErrorMessage</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Topic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TopicTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TopicTitle)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="categoryId" value="@Model.CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Topics" asp-action="TopicsByCategory" asp-route-id="@Model.CategoryId">Back to List</a>
    </form>
</div>
