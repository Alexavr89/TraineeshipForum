@model TraineeshipForum.Models.Pages.CategoryPage

@{
    ViewData["Title"] = "Detailed category page";
}

<div class="category-navigation">
    <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn dropdown-toggle">
            @Html.DisplayFor(modelCategory => Model.Category.Title)
        </button>
        <div id="myDropdown" class="dropdown-content">
            <input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">
            <a asp-controller="Home" asp-action="Index" class="dropdown-item">All Categories</a>
            @foreach (var category in Model.Categories)
            {
                <a asp-controller="Topics" asp-action="TopicsByCategory" asp-route-id="@category.Id" class="dropdown-item">@Html.DisplayFor(modelCategory => category.Title)</a>
            }
        </div>
    </div>
    <div class="create-topic">
        <a class="btn btn-info" asp-controller="Topics" asp-action="Create" asp-route-id="@Model.Category.Id"> + New Topic</a>
        <a onclick="document.getElementById('reply').style.display='block'">Topic</a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelTopic => Model.Topics.FirstOrDefault().TopicTitle)
            </th>
            <th>
                @Html.DisplayNameFor(modelTopic => Model.Topics.FirstOrDefault().AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(modelTopic => Model.Topics.FirstOrDefault().PostCount)
            </th>
            <th>
                @Html.DisplayNameFor(modelTopic => Model.Topics.FirstOrDefault().DateCreated)
            </th>
            <th>
                Settings
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var topic in Model.Topics)
        {
            <tr>
                <td>
                    <a asp-controller="Posts" asp-action="PostsByTopic" asp-route-id="@topic.TopicId">@Html.DisplayFor(modelTopic => topic.TopicTitle)</a>
                </td>
                <td>
                    <a>@Html.DisplayFor(modelTopic => topic.AuthorName)</a>
                </td>
                <td>
                    <a>@Html.DisplayFor(modelTopic => topic.PostCount)</a>
                </td>
                <td>
                    <a>@Html.DisplayFor(modelTopic => topic.DateCreated)</a>
                </td>
                <td>
                    @if (User.Identity.Name == topic.AuthorName)
                    {
                        <a class="edit-topic" asp-controller="Topics" asp-action="Edit" asp-route-id="@topic.TopicId">
                            <img class="edit" src="~/lib/images/Edit.jpg" alt="Edit" title="Edit Topic">
                        </a>
                        <a asp-controller="Topics" asp-action="Delete" asp-route-id="@topic.TopicId">
                            <img class="delete" src="~/lib/images/Delete.jpg" alt="Delete" title="Delete Topic">
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="reply-controls" id="reply" style="max-width:740px; display:none; flex-direction:column; right:0; left:0; margin-left:auto; margin-right:auto; height:400px; border:solid 1px #000;box-shadow:0 0 0 1px #3d434f inset, 0 5px 10px rgba(0,0,0,0.8); background:linear-gradient(to bottom, #283244 0%, #151a23 100%); padding: 5px 15px;">
    <form action="/" method="post">
        <div class="reply-to" style="margin: 5px 0 10px 0;">
            <span style="color:#a6a6a6">Create a New Topic</span>
        </div>
        <div class="title-and-category" style="display:flex; margin-bottom:5px;">
            <div class="topic-title" style="display:flex; flex:1 1 50%;">
                <input style="flex-grow: 1;" />
            </div>
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn">
                    @Html.DisplayFor(modelCategory => Model.Category.Title)
                </button>
                <div id="myDropdown" class="dropdown-content">
                    <input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">
                    <a asp-controller="Home" asp-action="Index" class="dropdown-item">All Categories</a>
                    @foreach (var category in Model.Categories)
                    {
                        <a asp-controller="Topics" asp-action="TopicsByCategory" asp-route-id="@category.Id" class="dropdown-item">@Html.DisplayFor(modelCategory => category.Title)</a>
                    }
                </div>
            </div>
        </div>
        <div class="textarea" style="flex:1;">
            <div class="text-editor;" style="padding:5px; margin:0.25em">
                <button>1</button>
                <button>2</button>
                <button>3</button>
                <button>4</button>
                <button>5</button>
                <button>6</button>
                <button>7</button>
                <button>8</button>
                <button>9</button>
            </div>
            <div class="text">
                <textarea style="width:100%; flex: 1 1 100%; height:200px;">Some Text to edit before posting</textarea>
            </div>
        </div>
        <div class="submit-panel">
            <input class="save" type="submit" value="Save" />
            <a class="cancel" style="color:#a6a6a6" onclick="document.getElementById('reply').style.display='none'">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/site.js"></script>
}