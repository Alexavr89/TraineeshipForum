@model TraineeshipForum.Models.Actions.WithPosts.DeletePost

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<p class="error">@ViewBag.ErrorMessage</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Post #@Model.PostId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(System.Net.WebUtility.HtmlDecode(Model.PostContent))
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="TopicId" value="@Model.TopicId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Posts" asp-action="PostsByTopic" asp-route-id="@Model.TopicId">Back to List</a>
    </form>
</div>
